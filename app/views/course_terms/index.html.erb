<p id="notice"><%= notice %></p>

<h2>Course Terms</h2>

<table class="table">
  <thead>
    <tr>
      <th>Term</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @course_terms.each do |course_term| %>
      <tr>
        <td><%= link_to course_term, course_term %></td>
        <td>
          <%= link_to course_term, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course term', new_course_term_path, class: 'btn btn-default'  %>
